<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="19"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="@color/hintColor"
                android:text="@string/drug_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_medicine_name"
                android:text="阿司匹林"
                android:textSize="13sp"
                android:textColor="@color/normalText"
                android:layout_marginBottom="10dp"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="@color/hintColor"
                android:text="@string/useful_life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_useful_life"
                android:text="2017/02/31"
                android:textSize="13sp"
                android:textColor="@color/redText"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="18"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="@color/hintColor"
                android:text="@string/remaining_quantity"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_remaining_quantity"
                android:text="16"
                android:textSize="13sp"
                android:textColor="@color/normalText"
                android:layout_marginBottom="10dp"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="@color/hintColor"
                android:text="@string/take_medicine_number"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.tckkj.medicinebox.view.ClearEditText
                android:id="@+id/cet_medicine_number"
                android:background="@null"
                android:hint="@string/input_number"
                android:textColorHint="@color/normalText"
                android:singleLine="true"
                android:inputType="number"
                android:textSize="13sp"
                android:textColor="@color/normalText"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:maxLength="8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>