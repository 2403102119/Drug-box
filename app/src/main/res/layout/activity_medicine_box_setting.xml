<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl_medicine_box_setting"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MedicineBoxSettingActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/host_number"
                android:textSize="15sp"
                android:textColor="@color/normalText"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_host_number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="165615165615"
                android:textSize="15sp"
                android:textColor="@color/greenText"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_host_name"
                android:layout_width="wrap_content"
                 android:text=""
                android:textSize="15sp"
                android:textColor="@color/normalText"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />

        </LinearLayout>

        <include layout="@layout/medicine_box_menu" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_medicine_knowledge"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="120dp">

                <ImageView
                    android:src="@mipmap/medicine_knowledge"
                    android:layout_marginTop="20dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/normalText"
                    android:layout_marginTop="20dp"
                    android:text="@string/drug_knowledge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_push_suggest"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="120dp">

                <ImageView
                    android:src="@mipmap/push_suggest"
                    android:layout_marginTop="20dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/normalText"
                    android:layout_marginTop="20dp"
                    android:text="@string/push_advice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_statement_message"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="120dp">

                <ImageView
                    android:src="@mipmap/statement_message"
                    android:layout_marginTop="20dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/normalText"
                    android:layout_marginTop="20dp"
                    android:text="@string/report_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"/>

    </LinearLayout>

    <include layout="@layout/medicine_box_setting_more"/>

</android.support.v4.widget.DrawerLayout>