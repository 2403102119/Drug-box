<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LanguageSelectActivity">

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="91dp">

        <LinearLayout
            android:id="@+id/ll_language_chinese"
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:gravity="center_vertical"
                android:text="中文"
                android:textSize="15sp"
                android:textColor="@color/normalText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <CheckBox
                android:id="@+id/cb_language_chinese"
                android:background="@drawable/selector_language"
                android:button="@null"
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </LinearLayout>

        <View
            android:layout_marginLeft="15dp"
            android:background="@color/lineColor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/ll_language_english"
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:gravity="center_vertical"
                android:text="English"
                android:textSize="15sp"
                android:textColor="@color/normalText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <CheckBox
                android:id="@+id/cb_language_english"
                android:background="@drawable/selector_language"
                android:button="@null"
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>