            android:layout_height="match_parent" />

        <TextView
            android:textSize="14sp"
            android:textColor="@color/normalText"
            android:gravity="center"
            android:text="2007/01/01"
            android:layout_width="0dp"
            android:layout_weight="196"
            android:layout_height="match_parent" />

        <TextView
            android:textSize="14sp"
            android:textColor="@color/normalText"
            android:gravity="center"
            android:text="209"
