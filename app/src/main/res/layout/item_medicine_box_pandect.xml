<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="15dp"
    android:layout_marginTop="10dp"
    android:paddingRight="15dp"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <View
        android:id="@+id/view_left_edge"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:background="@drawable/shape_half_green_bg_10"/>

    <LinearLayout
        android:background="@drawable/shape_half_white_bg_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_medicine_warehouse_icon"
            android:src="@mipmap/temporary_get_medicine_one"
            android:layout_marginLeft="12dp"
            android:layout_width="27dp"
            android:layout_height="30dp" />

        <View
            android:layout_width="1dp"
            android:layout_marginLeft="12dp"
            android:layout_height="match_parent"
            android:background="@color/appBg"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <View
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/appBg"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/appBg"
                android:layout_centerHorizontal="true"/>

            <include layout="@layout/layout_pandect_warehouse_content"/>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_marginRight="18dp"
            android:layout_height="match_parent"
            android:background="@color/appBg"/>

        <ImageView
            android:id="@+id/img_medicine_warehouse"
            android:src="@mipmap/icon_no"
            android:layout_marginRight="20dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />

    </LinearLayout>

</LinearLayout>