<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_white_bg_10"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

    <TextView
        android:id="@+id/tv_input_title"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="17sp"
        android:textColor="@color/normalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_input_confirm"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/selector_green_bg_22"
        android:text="@string/confirm"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_width="200dp"
        android:layout_height="40dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@id/tv_input_title"
            android:layout_above="@id/btn_input_confirm"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_height="match_parent">

            <include layout="@layout/phone_input_and_choose"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>