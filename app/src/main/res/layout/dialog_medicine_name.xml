<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_white_bg_10"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

    <TextView
        android:id="@+id/tv_medicine_name"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/drug_name"
        android:textSize="17sp"
        android:textColor="@color/normalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_medicine_name_confirm"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/selector_green_bg_22"
        android:text="@string/confirm"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_width="200dp"
        android:layout_height="40dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@id/tv_medicine_name"
            android:layout_above="@id/btn_medicine_name_confirm"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_height="match_parent">

            <com.tckkj.medicinebox.view.ClearEditText
                android:id="@+id/cet_medicine_name"
                android:background="@color/editBg"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp" />

            <ImageView
                android:id="@+id/img_scan_code"
                android:src="@mipmap/icon_scan_code"
                android:layout_marginLeft="10dp"
                android:layout_width="35dp"
                android:layout_height="35dp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>