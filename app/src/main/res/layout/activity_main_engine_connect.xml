<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainEngineConnectActivity">

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        
        <ImageView
            android:src="@mipmap/icon_search"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="15dp"
            android:layout_height="15dp" />

        <com.tckkj.medicinebox.view.ClearEditText
            android:id="@+id/cet_main_engine"
            android:layout_marginLeft="7dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:inputType="number"
            android:digits="@string/number_and_letters"
            android:hint="@string/hint_of_box_search"
            android:textSize="13sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_search"
            android:gravity="center_vertical"
            android:text="@string/search"
            android:textSize="15sp"
            android:textColor="@color/gray"
            android:paddingLeft="7dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_main_engine_one"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <TextView
            android:id="@+id/tv_main_engine_title_one"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textColor="@color/normalText"
            android:text="@string/host_serial_number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_state"
            android:text="未绑定"
            android:textSize="12sp"
            android:textColor="@color/greenText"
            android:layout_marginTop="22dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_main_engine_number_one"
            android:textSize="18sp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:singleLine="true"
            android:layout_below="@id/tv_main_engine_title_one"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/blackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_connect_main_engine_one"
            android:background="@drawable/selector_green_bg_22"
            android:layout_alignParentBottom="true"
            android:text="@string/connect"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginLeft="26dp"
            android:layout_marginBottom="12dp"
            android:layout_width="120dp"
            android:layout_height="35dp" />

        <Button
            android:id="@+id/btn_cancel_main_engine_one"
            android:visibility="gone"
            android:background="@drawable/shape_border_green_bg_18"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="@string/cancel"
            android:textSize="16sp"
            android:textColor="@color/greenText"
            android:gravity="center"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="12dp"
            android:layout_width="120dp"
            android:layout_height="35dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_main_engine_two"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <TextView
            android:id="@+id/tv_main_engine_title_two"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textColor="@color/normalText"
            android:text="@string/host_serial_number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_state_two"
            android:text="未绑定"
            android:textSize="12sp"
            android:textColor="@color/greenText"
            android:layout_marginTop="22dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_main_engine_number_two"
            android:textSize="18sp"
            android:layout_below="@id/tv_main_engine_title_two"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:singleLine="true"
            android:textColor="@color/blackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_connect_main_engine_two"
            android:background="@drawable/selector_green_bg_22"
            android:layout_alignParentBottom="true"
            android:text="@string/connect"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginLeft="26dp"
            android:layout_marginBottom="12dp"
            android:layout_width="120dp"
            android:layout_height="35dp" />

        <Button
            android:id="@+id/btn_cancel_main_engine_two"
            android:background="@drawable/shape_border_green_bg_18"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="@string/cancel"
            android:textSize="16sp"
            android:visibility="gone"
            android:textColor="@color/greenText"
            android:gravity="center"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="12dp"
            android:layout_width="120dp"
            android:layout_height="35dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_main_engine"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <TextView
            android:id="@+id/tv_main_engine_title"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textColor="@color/normalText"
            android:text="@string/host_serial_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_main_engine_number"
            android:textSize="18sp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:singleLine="true"
            android:layout_below="@id/tv_main_engine_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/blackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_state_three"
            android:text="未绑定"
            android:textSize="12sp"
            android:textColor="@color/greenText"
            android:layout_marginTop="22dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/btn_connect_main_engine"
            android:background="@drawable/selector_green_bg_22"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/connect"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginLeft="26dp"
            android:layout_marginBottom="12dp"
            android:layout_width="120dp"
            android:layout_height="35dp" />

        <Button
            android:id="@+id/btn_cancel_main_engine"
            android:background="@drawable/shape_border_green_bg_18"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="@string/cancel"
            android:visibility="gone"
            android:textSize="16sp"
            android:textColor="@color/greenText"
            android:gravity="center"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="12dp"
            android:layout_width="120dp"
            android:layout_height="35dp" />

    </RelativeLayout>

</LinearLayout>