<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="3dp"
            android:paddingBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="12sp"
                android:textColor="@color/warningRed"
                android:text="@string/notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="12sp"
                android:textColor="@color/warningRed"
                android:lineSpacingExtra="12dp"
                android:text="@string/set_out_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:text="@string/current_time"
                android:textSize="15sp"
                android:textColor="@color/normalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_current_date"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:text="2018/04/09 15:40"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="91dp">

            <LinearLayout
                android:id="@+id/ll_back_date"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

                <TextView
                    android:text="@string/return_date"
                    android:textSize="15sp"
                    android:textColor="@color/normalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_back_date"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:text="2018/04/09"
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@mipmap/back_gray"
                    android:layout_marginLeft="13dp"
                    android:layout_width="7dp"
                    android:layout_height="13dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineColor"/>

            <LinearLayout
                android:id="@+id/ll_back_time"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

                <TextView
                    android:text="@string/return_time"
                    android:textSize="15sp"
                    android:textColor="@color/normalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_back_time"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:text="15:40"
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@mipmap/back_gray"
                    android:layout_marginLeft="13dp"
                    android:layout_width="7dp"
                    android:layout_height="13dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dispense_medicine_number"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:text="@string/dispensing_copies"
                android:textSize="15sp"
                android:textColor="@color/normalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_dispense_medicine_number"
                android:textSize="15sp"
                android:textColor="@color/normalText"
                android:text="2"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RelativeLayout
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/btn_dispense_medicine_immediately"
                android:background="@drawable/selector_green_bg_22"
                android:textSize="16sp"
                android:text="@string/dosage_immediately"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="44dp" />

        </RelativeLayout>

        <TextView
            android:paddingLeft="15dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:text="@string/dosage_note"
            android:textSize="15sp"
            android:textColor="@color/orangeText"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor"/>
        
        <LinearLayout
            android:padding="15dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="15sp"
                android:textColor="@color/normalText"
                android:text="@string/exception_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="14dp"
                android:text="无法配药，无法配药，无法配药，无法配药。"
                android:textSize="15sp"
                android:textColor="@color/redText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>